# Environment variables for Docker development
# Copy this file to .env and update the values

# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# Database
DB_TYPE=sqlite

# Session Management
SESSION_SECRET=your-very-secure-session-secret-change-this-in-production
SESSION_TIMEOUT=604800000

# Token Security
TOKEN_SECRET=your-secure-token-secret-different-from-session-secret

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GCP_BUCKET_NAME=your-bucket-name
# For Docker, mount the credentials file as volume or use workload identity
# GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account.json

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/api/oauth/google/callback

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Facebook OAuth (optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Production specific (for docker-compose.prod.yml)
# UPLOADS_PATH=/path/to/persistent/uploads
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key